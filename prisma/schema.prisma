// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./common.db"
}

model User {
  id            String         @id
  chatId        String
  name          String
  username      String         @unique
  role          Int            @default(2)
  learningDecks LearningDeck[]
}

model Card {
  id                        String         @id @default(uuid())
  question                  String
  questionMode              String         @default("text")
  answer                    String
  answerMode                String         @default("text")
  deck                      Deck           @relation(fields: [deckId], references: [id])
  deckId                    String
  learningDecksKnownCards   LearningDeck[] @relation("KnownCards")
  learningDecksUnknownCards LearningDeck[] @relation("UnknownCards")
}

model Deck {
  id            String         @id @default(uuid())
  title         String
  category      String
  cards         Card[]
  learningDecks LearningDeck[]
}

model LearningDeck {
  id           String @id @default(uuid())
  deck         Deck   @relation(fields: [deckId], references: [id])
  user         User   @relation(fields: [userId], references: [id])
  deckId       String
  userId       String
  knownCards   Card[] @relation("KnownCards")
  unknownCards Card[] @relation("UnknownCards")

  @@unique([deckId, userId])
}
