// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./common.db"
}

model User {
  id           BigInt            @id
  name         String
  username     String
  role         Int
  deck         Deck[]
  learningDeck LearningDeck[]
}

model Card {
  id                       String        @id @default(uuid())
  question                 String
  answer                   String
  deck                     Deck          @relation(fields: [deckId], references: [id])
  deckId                   String
  learningDeckKnownCards   LearningDeck? @relation("KnownCards", references: [id], fields: [learningDeckId])
  learningDeckUnknownCards LearningDeck? @relation("UnknownCards", references: [id], fields: [learningDeckId])
  learningDeckId           String?
  LearningDeck             LearningDeck? @relation(fields: [learningDeckId], references: [id])
}

model Deck {
  id            String         @id @default(uuid())
  name          String
  cards         Card[]
  private       Boolean        @default(false)
  learningDecks LearningDeck[]
  User          User?          @relation(fields: [userId], references: [id])
  userId        BigInt?
}

model LearningDeck {
  id           String @id @default(uuid())
  deck         Deck   @relation(fields: [deckId], references: [id])
  user         User   @relation(fields: [userId], references: [id])
  deckId       String
  userId       BigInt
  knownCards   Card[] @relation("KnownCards")
  unknownCards Card[] @relation("UnknownCards")
  Card         Card[]
}
